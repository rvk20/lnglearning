{% extends 'baseuser.html.twig' %}

{% block title %}Test słówek{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
  <div class="example-wrapper" style="display: block;
  text-align: center;
  
  width: 40%;
  border: 0;
  border-radius: 1rem;
  box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
  padding-top: 30px;
  padding-right: 30px;
  padding-bottom: 30px;
  padding-left: 30px;
  "> 
   <div class="example-wrapper" style="text-align: center;">
<p style="font-family: 'Garamond';"> Wybierz język: </p>
    
    <form name = "myform" method="POST">
    <select name="language">
    {% for language in languages %}
    <option value="{{ language }}">{{ language }}</option>
    {% endfor %}   
    </select>
    </br>
    </br>
    <button name="submit" class="btn btn-lg btn-primary" type="submit"  style="align: center; font-size: 15px;" >Start</button>
    
    </form>
    </div>









</div>
{% endblock %}
